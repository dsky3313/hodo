<?xml version="1.0" encoding="utf-8"?>
<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <CheckButton name="hodoCheckboxTemplate" inherits="InterfaceOptionsCheckButtonTemplate" virtual="true"/>

    <Slider name="hodoSliderTemplate" inherits="OptionsSliderTemplate" virtual="true">
        <Size x="180" y="17"/>
    </Slider>

    <Frame name="hodoDropdownTemplate" inherits="UIDropDownMenuTemplate" virtual="true"/>

    <Frame name="hodoCheckboxSliderTemplate" virtual="true">
        <Size x="420" y="32"/>
        <Frames>
            <CheckButton parentKey="CheckBox" inherits="hodoCheckboxTemplate">
                <Anchors><Anchor point="LEFT" x="0" y="0"/></Anchors>
            </CheckButton>
            <Slider parentKey="Slider" inherits="hodoSliderTemplate">
                <Anchors><Anchor point="RIGHT" x="-10" y="0"/></Anchors>
            </Slider>
        </Frames>
    </Frame>

    <Frame name="hodoCheckboxDropdownTemplate" virtual="true">
        <Size x="420" y="32"/>
        <Frames>
            <CheckButton parentKey="CheckBox" inherits="hodoCheckboxTemplate">
                <Anchors><Anchor point="LEFT" x="0" y="0"/></Anchors>
            </CheckButton>
            <Frame parentKey="DropDown" inherits="hodoDropdownTemplate">
                <Anchors><Anchor point="RIGHT" x="20" y="-5"/></Anchors>
            </Frame>
        </Frames>
    </Frame>

    <Frame name="hodoSettingsPanel" inherits="BasicFrameTemplateWithInset" parent="UIParent" hidden="true" movable="true" enableMouse="true">
        <Size x="500" y="550"/>
        <Anchors><Anchor point="CENTER"/></Anchors>
        
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="GameFontNormalLarge">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="16" y="-16"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <ScrollFrame parentKey="ScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-50"/>
                    <Anchor point="BOTTOMRIGHT" x="-30" y="10"/>
                </Anchors>
                <ScrollChild>
                    <Frame parentKey="Content">
                        <Size x="450" y="1"/> <Anchors><Anchor point="TOPLEFT"/></Anchors>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        
        <Scripts>
            <OnLoad>
                self.Title:SetText("hodo Settings");
                self:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>self:StartMoving()</OnDragStart>
            <OnDragStop>self:StopMovingOrSizing()</OnDragStop>
        </Scripts>
    </Frame>
</Ui>